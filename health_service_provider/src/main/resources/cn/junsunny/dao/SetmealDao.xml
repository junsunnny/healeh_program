<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="cn.junsunny.Dao.SetmealDao">

    <!--添加套餐-->
    <insert id="addSetMeal"
            parameterType="cn.junsunny.pojo.Setmeal">
        <selectKey resultType="java.lang.Integer"
                   keyProperty="id"
                   order="AFTER">
            select LAST_INSERT_ID()
        </selectKey>
        insert into t_setmeal
            (code,name,sex,age,helpCode,price,
            remark,attention,img)
        values
            (#{code},#{name},#{sex},#{age},#{helpCode},#{price},
            #{remark},#{attention},#{img})
    </insert>

    <!--设置套餐管理和检查组之间的关联关系-->
    <insert id="setSetmealAndCheckGroup" parameterType="hashmap">
        insert into
            t_setmeal_checkgroup
                (setmeal_id, checkgroup_id)
        value
            (#{setMealId},#{checkGroupId})
    </insert>

    <!--分页查询套餐管理-->
    <select id="selectByCondition"
            resultType="cn.junsunny.pojo.Setmeal"
            parameterType="String">
        select * from t_setmeal
        <if test="value != null and value.length > 0">
            where
                code like concat('%', #{value} ,'%')
                or name like concat('%', #{value} ,'%')
                or helpCode like concat('%', #{value} ,'%')
        </if>
    </select>

    <!--刪除检查套餐数据-->
    <delete id="deleteSetmeal" parameterType="int">
        delete from t_setmeal where id = #{id}
    </delete>

    <!--删除检查套餐和检查组之间的数据-->
    <delete id="deleteSetMealAndCheckGroup" parameterType="int">
        delete from t_setmeal_checkgroup where setmeal_id = #{id}
    </delete>

    <!--查询检查套餐信息根据id-->
    <select id="findSetMealById" parameterType="int" resultType="cn.junsunny.pojo.Setmeal">
        select * from t_setmeal where id = #{id};
    </select>

    <!--根据检查套餐id 获取检查组信息-->
    <select id="findSetMealAndCheckGroupBySetMealId" parameterType="int"
            resultType="int">
        select
            checkgroup_id
        from
            t_setmeal_checkgroup
        where
            setmeal_id = #{setmealId};
    </select>

    <!--更新检查套餐-->
    <update id="editSetMeal" parameterType="cn.junsunny.pojo.Setmeal">
        update t_setmeal
        <trim prefix="set" suffixOverrides=",">
            <if test="name != null and name.length > 0">
                name = #{name},
            </if>
            <if test="code != null and code.length > 0">
                code = #{code},
            </if>
            <if test="helpCode != null and helpCode.length > 0">
                helpCode = #{helpCode},
            </if>
            <if test="sex != null and sex.length > 0">
                sex = #{sex},
            </if>
            <if test="age != null and age.length > 0">
                age = #{age},
            </if>
            <if test="price != null and price > 0">
                price = #{price},
            </if>
            <if test="remark != null and remark.length > 0">
                remark = #{remark},
            </if>
            <if test="attention != null and attention.length > 0">
                attention = #{attention},
            </if>
            <if test="img != null and img.length > 0">
                img = #{img},
            </if>
        </trim>
        <where>
            <if test="id != null and id > 0">
                id = #{id}
            </if>
        </where>
    </update>
</mapper>